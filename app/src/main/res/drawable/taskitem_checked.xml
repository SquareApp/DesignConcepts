<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">


    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">

        <shape
            android:shape="rectangle"
            >

            <stroke
                android:width="1.5dp"
                android:color="#dbd4e6ff"
                />


            <corners
                android:radius="5dp"
                />

            <size
                android:width="30dp"
                android:height="30dp"
                />

        </shape>

    </item>


    <item

        android:top="6dp"
        android:right="6dp"
        android:left="6dp"
        android:bottom="6dp">

        <shape
            android:shape="rectangle"
            >

            <solid
                android:color="#dbd4e6ff"
                />


            <corners
                android:radius="2dp"
                />

            <size
                android:width="30dp"
                android:height="30dp"
                />

        </shape>

    </item>










</layer-list>